<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/editno"
        android:layout_marginTop="18dp"
        android:text="Harga Kamar"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="129dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textid"
        android:layout_alignStart="@+id/textid"
        android:layout_below="@+id/editkamar"
        android:layout_marginTop="13dp"
        android:text="Nomor Kamar"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="202dp" />

    <EditText
        android:id="@+id/editkamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:hint="Nama Kamar"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="62dp" />

    <EditText
        android:id="@+id/editno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editkamar"
        android:layout_alignStart="@+id/editkamar"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="No Kamar"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="120dp" />

    <EditText
        android:id="@+id/editharga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editno"
        android:layout_alignStart="@+id/editno"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Harga Kamar"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="185dp" />

    <TextView
        android:id="@+id/textid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="txt"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btnupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editharga"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Update"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="267dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Nama Kamar"
        android:textAlignment="center" />


</RelativeLayout>